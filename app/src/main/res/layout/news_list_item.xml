<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowOrderPreserved="false"
    >

    <ImageView
        android:id="@+id/item_readIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_column="1"
        android:gravity="center_vertical"
        android:contentDescription="@string/ne_unread_item_icon"
        android:src="@drawable/ic_action_unread"

        android:cropToPadding="false"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="DT SysCon deadline"
        android:gravity="bottom"
        android:textSize="20sp"
        android:paddingTop="10dp"/>
    <TextView
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:text="08/02/15 by DT Dept."
        android:textSize="14sp"
        android:paddingBottom="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:gravity="center_vertical"
        android:contentDescription="@string/ne_open_item_icon"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/ic_action_next_item"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>
</GridLayout>